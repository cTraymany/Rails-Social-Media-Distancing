<!DOCTYPE html>
<html>
  <head>
    <title>Social Media Distancing</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css2?family=Epilogue&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
  </head>

  <body>
    <header>
      <nav class="navigation">
        <ul class="navigation__list">
          <% if !current_user %>
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Sign Up", signup_path %></li>
            <li><%= link_to "Log In", login_path %></li>
            <li><%= link_to "Continue with Google", '/auth/google_oauth2' %></li>
          <% else %>
            <li><%= link_to "Home", user_path(current_user) %></li>
            <li><%= link_to "Goals", user_goals_path(current_user) %></li>
            <li><%= link_to "Journeys", user_journeys_path(current_user) %></li>
            <li><%= link_to "Log Out", logout_path, method: :post %></li>
          <% end %>
        </ul>
      </nav>
    </header>
    
    <%= yield %>

    <footer>
      <br><small>&copy; 2020 RailsSocialMediaDistancing</small>
    </footer>
  </body>

</html>
