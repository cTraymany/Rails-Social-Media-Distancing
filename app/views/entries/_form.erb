<%= form_with model: @entry, url: url do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br><br>

    <%= f.label :content %><br>
    <%= f.text_area :content %><br><br>

    <%= f.label :goal %><br>

    <%= f.collection_select :goal_id, @goals, :id, :name,
        @entry.goal ? { selected: @entry.goal.id } : { include_blank: true } %><br><br>

    <%= f.submit %>
<% end %>