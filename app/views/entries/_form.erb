<%= form_with model: @entry, url: url do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br><br>

    <%= f.label :content %><br>
    <%= f.text_area :content %><br><br>

    <%= f.label :name, "Choose a goal!" %><br>

    <% if @entry.goal %>
        <%= f.collection_select :goal_id, @goals, :id, :name, include_blank: true, selected: @entry.goal.id %><br><br>
    <% else %>
        <%= f.collection_select :goal_id, @goals, :id, :name, include_blank: true %><br><br>
    <% end %>

    <%= f.submit %>
<% end %>